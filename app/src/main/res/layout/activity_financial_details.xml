<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="50dp">

    <TextView
        android:id="@+id/tventerfinancialdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Enter Financial Details"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="150dp"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/etCashAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:hint="Cash Amount"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7F7F7F"/>

    <EditText
        android:id="@+id/etBankBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:hint="Bank Balance"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7F7F7F" />

    <EditText
        android:id="@+id/etSavingsAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:hint="Savings Amount"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#7F7F7F" />

    <Button
        android:id="@+id/btnSaveFinancialDetails"
        android:text="Save Financial Details"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#212121"
        android:fontFamily="@font/raleway_semibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="8dp"/>
</LinearLayout>
